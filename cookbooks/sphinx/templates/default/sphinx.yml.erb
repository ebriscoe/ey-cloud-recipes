<%
   sphinx = nil
   @node[:engineyard][:environment][:instances].each do |i|
      sphinx = i if i[:name] == "Utility1"
   end
   # sphinx[:private_hostname]
%>

<%= @node[:environment][:framework_env] %>:
  searchd_log_file: /var/log/engineyard/sphinx/<%= @app_name %>/searchd.log
  query_log_file: /var/log/engineyard/sphinx/<%= @app_name %>/query.log
  pid_file: /var/run/sphinx/<%= @app_name %>.pid
  address: ec2-184-73-128-174.compute-1.amazonaws.com
  port: 9312
  mem_limit: <%= @mem_limit %>
  config_file: /data/<%= @app_name %>/current/config/<%= @flavor %>/<%= @node[:environment][:framework_env] %>.sphinx.conf
  searchd_file_path: /var/log/engineyard/sphinx/<%= @app_name %>/indexes

